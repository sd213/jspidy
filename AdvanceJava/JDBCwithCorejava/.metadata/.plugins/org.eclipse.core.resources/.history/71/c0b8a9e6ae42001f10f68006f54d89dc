package creationupdationdeletion;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

public class CreateClass {
	
	public static void main(String[] args) {
		java.util.Scanner sc = new java.util.Scanner(System.in);
		String url = "jdbc:mysql://localhost:3306/";
		String db;
		String user = "root";
		String pass = "toor";
		String sql = null;
		
		Connection connection = null;
	    Statement statement = null;
		
	    
	    try {
			Class.forName("com.mysql.cj.jdbc.Driver");
			connection = DriverManager.getConnection(url,user,pass);
			statement = connection.createStatement();
			System.out.print("Enter Your Database Name:-\n(give no space in name) ");
			
			db = sc.next();
			sql = "CREATE DATABASE IF NOT EXISTS "+db;
			statement.execute(sql);
			
//			stmt.executeQuery(sql); // it  executeQuery can only execute DQL query
			statement.executeUpdate(sql);
			System.out.println("Database : "+db+"is either Created or Existed before " );
	
			
			
		} catch (ClassNotFoundException | SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
}
