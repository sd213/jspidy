package creationupdationdeletion;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.util.Scanner;
import java.sql.PreparedStatement;

public class DeleteClass {
	public static void main(String[] args) {
		String url = "jdbc:mysql://localhost:3306/";
		String db;
		String table;
		String user = "root";
		String pass = "toor";
		String sql = null;
		Scanner sc = new Scanner(System.in);
		
		Connection connection = null;
	    PreparedStatement pstatement = null;
	    try {
			Class.forName("com.mysql.cj.jdbc.Driver");
			
			System.out.println("Enter Database Name:- ");
			db = sc.next();
			
			connection = DriverManager.getConnection(url+db,user,pass);
			pstatement = connection.prepareStatement("DELETE FROM ?  WHERE id = ?");			
		
			System.out.println("Enter Table Name:- ");
			table = sc.next();
			
		
			
			System.out.println("Enter Value of id  of Record :- ");
			int id = sc.nextInt();
			
			pstatement.setString(1,table);
			
			
//			sql = "TRUNCATE "+table;
//			PreparedStatement.execute(sql);
			
			System.out.println("Truncated Success fully");
			connection.close();
		} catch (ClassNotFoundException | SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
