package org.jsp;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

public class JdbcApp {

	public static void main(String[] args) {
		String url = "jdbc:mysql://localhost:3306/";
		String user = "root";
		String pass = "toor";
		String sql = null;
		
		try {
			Class.forName("com.mysql.cj.jdbc.Driver");
			Connection con = DriverManager.getConnection(url, user, pass);
			System.out.println(con + " is succesffully connected");
			
			Statement stmt = con.createStatement();
			sql = "CREATE DATABASE IF NOT EXISTS SD";
//			stmt.executeQuery(sql); // it  executeQuery can only execute DQL query
			stmt.executeUpdate(sql);
			
			sql = "CREATE TABLE IF NOT EXISTS EMP ( id NOT NULL PRIMARY KEY, NAME VARCHAR(50),AGE INT,GENDER VARCHAR(50) ";
			stmt.execute(sql);
			
//			sql = "CREATE TABLE "
		} catch (ClassNotFoundException | SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

}
