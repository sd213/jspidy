package creationupdationdeletion;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import java.util.Scanner;

public class CreateClass {
	
	public static void main(String[] args) {
		String url = "jdbc:mysql://localhost:3306/";
		String db ;
		String table;
		String user = "root";
		String pass = "toor";
		String sql = null;
		
		Connection connection = null;
	    PreparedStatement pstatement = null;
	    try (Scanner sc = new Scanner(System.in)) {
			try {
				Class.forName("com.mysql.cj.jdbc.Driver");
				System.out.println("Enter Database Name:- ");
				db = sc.next();
				connection = DriverManager.getConnection(url,user,pass);
				pstatement = connection.prepareStatement("CREATE DATABASE IF NOT EXISTS "+db);
				
				
//			stmt.executeQuery(sql); // it  executeQuery can only execute DQL query
				pstatement.execute();
				pstatement.execute("USE "+db);
				
				System.out.println("Enter Table Name:- ");
				table = new java.util.Scanner(System.in).next();
				
				sql = "CREATE TABLE IF NOT EXISTS "+table+"(id INT NOT NULL PRIMARY KEY, name VARCHAR(50),age INT,GENDER VARCHAR(50)) ";
				pstatement.execute(sql);
				
				sql = "INSERT INTO "+table+" VALUES(103,'Som',12,'Male'),(102,'Dasia',123,'Female'),(104,'Bruce',35,'Male')";
				pstatement.execute(sql);
				connection.close();
			} catch (ClassNotFoundException | SQLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		
	}
}
